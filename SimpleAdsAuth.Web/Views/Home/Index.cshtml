@using SimpleAdsAuth.Data
@model AdViewModel

<div class="col-md-6 offset-md-3">
    @foreach (var ad in Model.Ads)
    {

        <div class="bg-light rounded-3 p-5 mt-3">
            <h5>Listed by @ad.UserName</h5>
            <h5>Listed on @ad.Date.ToLongDateString()</h5>
            <h5>Phone Number: @ad.PhoneNumber</h5>
            <h3>Details:</h3>
            <p>@ad.Listing</p>
            @if(ad.UserId == Model.CurrentId)
            {
                <form method="post" action="/home/deletead">
                    <div style="text-align:right;">
                        <input type="hidden" name="id" value="@ad.Id" />
                        <button class="btn btn-danger">Delete</button>
                    </div>
                </form>
            }
        </div>


    }

</div>


